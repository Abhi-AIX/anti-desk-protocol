---

import { Card, LinkCard } from '@astrojs/starlight/components';
import { categories } from '../data/categories.js';

---
<main class="homepage-container">
  <header class="homepage-header">
    <h1>Welcome to the Anti-Desk Handbook</h1>
    <p class="homepage-intro">Practical, science-backed routines to fix posture, boost energy, and feel your best at your desk.</p>
  </header>
  
  <section class="homepage-categories">
    <div class="category-grid">
      {categories.map(category => (
        <div class="category-card" data-status={category.status}>
          <a href={category.status === 'coming-soon' ? '#' : category.href} class="card-link">
            <div class="card-icon-wrapper">
              <span class="icon-text" set:html={category.icon}></span>
            </div>
            <h3 class="card-title">{category.title}</h3>
            <p class="card-description">{category.description}</p>
            {category.status === 'coming-soon' && (
              <span class="badge">Coming Soon</span>
            )}
          </a>
        </div>
      ))}
    </div>
  </section>
  
  <footer class="homepage-footer">
    <p>Take the first step to a healthier desk life. Your body will thank you!</p>
  </footer>
</main>

<script>
  document.querySelectorAll('.category-card[data-status="coming-soon"] .card-link').forEach((link) => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      alert('Coming soon!');
    });
  });
</script>

<style>
/* Global Container */
.homepage-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
  padding: 2rem 1.5rem;
}

/* Header Section */
.homepage-header {
  text-align: center;
  margin-bottom: 3rem;
  padding-top: 2rem;
}

.homepage-header h1 {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 800;
  color: #ffffff;
  margin: 0 0 1rem 0;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
  letter-spacing: -0.5px;
}

.homepage-intro {
  font-size: clamp(1rem, 2.5vw, 1.25rem);
  color: rgba(255, 255, 255, 0.95);
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

/* Categories Section */
.homepage-categories {
  width: 100%;
  max-width: 900px;
  margin: 0 auto;
  padding-bottom: 2rem;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

/* Category Cards */
.category-card {
  display: flex;
}

.card-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 2.5rem 2rem;
  background: #ffffff;
  border-radius: 16px;
  text-decoration: none;
  color: inherit;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  width: 100%;
}

.card-link:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
}

.category-card[data-status="coming-soon"] .card-link {
  opacity: 0.85;
  cursor: not-allowed;
}

.category-card[data-status="coming-soon"] .card-link:hover {
  transform: translateY(-4px);
  opacity: 1;
}

/* Card Icon */
.card-icon-wrapper {
  width: 80px;
  height: 80px;
  margin-bottom: 1.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
}

.icon-text {
  font-size: 2.5rem;
  line-height: 1;
}

/* Card Title */
.card-title {
  margin: 0 0 0.75rem 0;
  font-size: 1.3rem;
  font-weight: 700;
  color: #1a202c;
  line-height: 1.3;
}

/* Card Description */
.card-description {
  margin: 0 0 1rem 0;
  font-size: 0.95rem;
  color: #4a5568;
  line-height: 1.6;
}

/* Coming Soon Badge */
.badge {
  display: inline-block;
  margin-top: auto;
  padding: 0.5rem 1rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Footer */
.homepage-footer {
  text-align: center;
  margin-top: auto;
  padding: 3rem 0 1rem;
}

.homepage-footer p {
  font-size: 1.1rem;
  color: rgba(255, 255, 255, 0.9);
  margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
  .homepage-container {
    padding: 2rem 1rem; /* Adjusted vertical padding */
  }
  
  .homepage-header {
    margin-bottom: 2rem; /* Reduced margin */
    padding-top: 1rem;
  }

  .category-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
    max-width: 400px;
    margin: 0 auto;
  }
  
  .card-link {
    padding: 1.5rem; /* Uniform padding */
  }

  .card-icon-wrapper {
    width: 60px; /* Smaller icon circle */
    height: 60px;
    margin-bottom: 1rem;
  }

  .icon-text {
    font-size: 2rem; /* Smaller icon font */
  }

  .card-title {
    font-size: 1.15rem; /* Slightly smaller title */
  }

  .card-description {
    font-size: 0.9rem; /* Slightly smaller description */
  }

  .homepage-footer {
    padding: 2rem 0 1rem; /* Reduced footer padding */
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  .homepage-categories {
    max-width: 700px;
  }
}
</style>